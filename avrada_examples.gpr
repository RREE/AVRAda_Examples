with "config/avrada_examples_config.gpr";
project Avrada_Examples is

   for Source_Dirs use ("src/", "config/");
   for Object_Dir use "obj/" & Avrada_Examples_Config.Build_Profile;
   for Create_Missing_Dirs use "True";
   for Exec_Dir use "bin";
   for Main use ("avrada_examples.adb");

   package Compiler is
      for Default_Switches ("Ada") use Avrada_Examples_Config.Ada_Compiler_Switches;
   end Compiler;

   package Binder is
      for Switches ("Ada") use ("-Es"); --  Symbolic traceback
   end Binder;

   package Install is
      for Artifacts (".") use ("share");
   end Install;

end Avrada_Examples;
